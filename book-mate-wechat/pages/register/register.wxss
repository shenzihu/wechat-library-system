/* pages/register/register.wxss */
page {
    width: 100%;
}

.formContainer {
    width: 90%;
    height: 200rpx;
    border-radius: 5rpx;
}

.formContainer view {
    width: 100%;
    height: 100rpx;
    border: 1px solid #ccc;
    margin: -1rpx;
    border-radius: 5rpx;
}

.registerBtn {
    width: 100%;
    height: 80rpx;
    background-color: #4db6ac;
    border-radius: 5px;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
    font-size: 32rpx;
    margin-top: 150rpx;
}

.usernameContainer image,
.passwordContainer image {
    width: 40rpx;
    height: 40rpx;
    margin-top: 30rpx;
    margin-left: 30rpx;
    float: left;
    display: block;
}

.usernameContainer input,
.passwordContainer input {
    width: 200px;
    float: left;
    display: block;
    height: 100rpx;
    margin-left: 10px;
    font-size: 32rpx;
}

.picker {
    padding-top: 15px;
    padding-left: 50px;
    border: none !important;
    color: #808080;
}

.navBtn {
    font-size: 32rpx;
    text-align: center;
    margin: 0 auto;
    color: #aaa;
    display: block;
    margin-top: 25px;
}

.errorMsg {
    color: #ef5350;
    font-size: 32rpx;
    margin-bottom: 5px;
}
.agree{
    color: blue;
    text-decoration:underline;
}