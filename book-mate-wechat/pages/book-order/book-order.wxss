/* pages/book-borrow/book-borrow.wxss */

.main-container {
    width: 100%;
    display: flex;
    flex-direction: column;
}

.book-container {
    width: 70%;
    height: 160rpx;
    margin: 0 auto;
    /* border-bottom: 1px solid #eee; */
    float: left;
    padding-left: 5px;
}

.book-container image {
    height: 120rpx;
    width: 100rpx;
    margin-top: 10rpx;
    float: left;
}

.book-container .right {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.book-container .title {
    font-size: 32rpx;
    display: block;
    padding-top: 16px;
    margin-left: 10px;
}

.book-container .desc {
    font-size: 26rpx;
    color: #666;
    display: block;
    padding-top: 10px;
    margin-left: 10px;
}
.book-list {
    font-size: large;
    text-align: center;
    vertical-align: middle;
}
/*主容器*/  
.stepper {  
    width: 80px;   
    /*给主容器设一个边框*/  
    border: 1px solid #ccc;  
    border-radius: 3px;  
    float: right;
    margin: 53rpx 5px;  
}  
  
/*加号和减号*/  
.stepper text {  
    width: 19px;  
    line-height: 26px;  
    text-align: center;  
    float: left;  
    font-size: 20px;
}  
  
/*数值*/  
.stepper input {  
    width: 40px;   
    float: left;  
    margin: 0 auto;  
    text-align: center;  
    font-size: 14px;  
    /*给中间的input设置左右边框即可*/  
    border-left: 1px solid #ccc;  
    border-right: 1px solid #ccc;  
}  
  
/*普通样式*/  
.stepper .normal{  
    color: black;  
}  
  
/*禁用样式*/  
.stepper .disabled{  
    color: #ccc;  
} 

.submitBtn {
    width: 100%;
    height: 80rpx;
    background-color: #4db6ac;
    border-radius: 5px;
    color: #fff;
    text-align: center;
    line-height: 80rpx;
  }

.delete-btn {
    position: absolute;
    top: 0;
    bottom: 0;
    right: 0; 
    width: 120rpx;
    font-family: PingFangSC-Regular;
    font-size: 24rpx;
    color: #FFFFFF;
    line-height: 120rpx;
    z-index: 1;
    background: #E66671;
    text-align: center;
    height: 160rpx;
  }
  movable-area {
    height: 160rpx;
    width: calc(100vw - 120rpx);
  }

  movable-view {
    height: 160rpx;
    width: 100vw;
    background: #fff;
    z-index: 999;
  }