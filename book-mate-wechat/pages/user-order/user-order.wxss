.main-container {
    width: 100%;
}
.table {
    border: 0px solid darkgray;
  }
  .tr {
    display: flex;
    width: 100%;
    justify-content: center;
    height: 3rem;
    align-items: center;
  }
  .td {
      width:40%;
      justify-content: center;
      text-align: center;
  }
  .bg-w{
    background: rgb(85, 82, 82);
  }
  .bg-g{
    background: #E6F3F9;
  }
  .th {
    width: 40%;
    justify-content: center;
    background: #80c4c4;
    color: #fff;
    display: flex;
    height: 3rem;
    align-items: center;
  }
  .tdhidden{
    width:100px;  
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap:normal;
}